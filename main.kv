<NameDialog>
    orientation: "vertical"
    spacing: "12dp"
    size_hint: .8, None
    height: "120dp"
    MDTextField:
        id: first_name_input
        hint_text: "Prénom"
    MDTextField:
        id: family_name_input
        hint_text: "Nom de famille"

<ClassDialog>
    orientation: "vertical"
    spacing: "12dp"
    size_hint: .8, None
    height: "50dp"
    MDTextField:
        id: class_input
        hint_text: "Classe"
        max_text_length: 4

<NoteListItem>
    on_release: app.root.load_note(root)
    IconLeftWidget:
        icon: root.icon
        on_release: app.root.delete_note(root)

<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"
    AnchorLayout:
        anchor_x: "center"
        size_hint_y: None
        height: avatar.height
        Image:
            id: avatar
            size_hint: None, None
            source: "ressources/img/logo.png"
    ScrollView:
        MDList:
            OneLineIconListItem:
                text: "Accueil"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "home"
                IconLeftWidget:
                    icon: "home"
            OneLineIconListItem:
                text: "Horaire"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "schedule"
                IconLeftWidget:
                    icon: "calendar"
            OneLineIconListItem:
                text: "Notes"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "notes"
                    app.root.update_notelist()
                IconLeftWidget:
                    icon: "notebook"
            OneLineIconListItem:
                text: "Info"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "info"
                    app.root.update_info()
                IconLeftWidget:
                    icon: "account-box"
            OneLineIconListItem:
                text: "Signaler un bug"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "bugreport"
                    app.root.update_info()
                IconLeftWidget:
                    icon: "bug"

Waha: #Root Rule
    cols: 1
    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        elevation: 10
        title: "Waha"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
    NavigationLayout:
        x: toolbar.height
        size_hint_y: 1.0 - toolbar.height/root.height
        ScreenManager:
            id: screen_manager
            Screen:
                name: "home"
                MDLabel:
                    id: home-time-widget
                    padding: "40dp", 0
                    text: "Bienvenue sur l'application non-officielle pour les élèves de l'Athénée Léonie de Waha. Commencez à naviguer dans l'application en ouvrant le menu à gauche. Si vous détectez des bugs, merci de nous en informer. (Voir onglet \"Signaler un bug\")"
                    halign: "center"
            Screen:
                name: "schedule"
                MDLabel:
                    text: "Horaire"
                    halign: "center"
            Screen:
                name: "notes"
                id: notes_screen
                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    MDList:
                        id: notelist
                MDFloatingActionButton:
                    icon: "plus"
                    id: new
                    y: root.height - (self.height + toolbar.height + dp(10))
                    x: root.width - (self.width + dp(10))
                    md_bg_color: app.theme_cls.primary_color
                    on_press:
                        root.load_note(self)
            Screen:
                name: "editnote"
                MDTextField:
                    id: note_textfield
                    size_hint_x: 1
                    size_hint_y: 1
                    multiline: True
                MDFloatingActionButton:
                    icon: "arrow-left"
                    id: editnote_back_floating_button
                    y: root.height - (self.height + toolbar.height + dp(10))
                    x: dp(10)
                    md_bg_color: app.theme_cls.primary_color
                    on_press:
                        screen_manager.current = "notes"
                        root.save_note()
                        root.update_notelist()

            Screen:
                name: "info"
                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    MDList:
                        OneLineListItem:
                            text: "Informations Personnelles"
                        ThreeLineIconListItem:
                            id: name
                            text: "Nom"
                            secondary_text: "Cliquez pour définir"
                            tertiary_text: "Cliquez pour définir"
                            on_release:
                                root.open_name_popup()
                            IconLeftWidget:
                                icon: "face"
                        TwoLineIconListItem:
                            id: birthday
                            text: "Date de naissance"
                            secondary_text: "Cliquez pour définir"
                            on_release:
                                root.show_birthday_date_picker()
                            IconLeftWidget:
                                icon: "cake"
                        TwoLineIconListItem:
                            id: class
                            text: "Classe"
                            secondary_text: "Cliquez pour définir"
                            on_release:
                                root.open_class_popup()
                            IconLeftWidget:
                                icon: "account-group"
                        OneLineListItem:
                            text: "Informations Générales"
                        ThreeLineIconListItem:
                            text: "Adresse"
                            secondary_text: "Boulevard d'Avroy, 96"
                            tertiary_text: "4000 Liège"
                            IconLeftWidget:
                                icon: "map-marker"
                        TwoLineIconListItem:
                            text: "Email"
                            secondary_text: "waha.administration@gmail.com"
                            IconLeftWidget:
                                icon: "email"
                        TwoLineIconListItem:
                            text: "Accueil"
                            secondary_text: "04/238-39-21"
                            IconLeftWidget:
                                icon: "phone"
                        TwoLineIconListItem:
                            text: "Economat"
                            secondary_text: "04/238-39-24"
                            IconLeftWidget:
                                icon: "phone"
                        TwoLineIconListItem:
                            text: "Secrétariat de Direction"
                            secondary_text: "04/238-39-25"
                            IconLeftWidget:
                                icon: "phone"
                        TwoLineIconListItem:
                            text: "Educateurs (1-2-3e années)"
                            secondary_text: "04/238-39-26"
                            IconLeftWidget:
                                icon: "phone"
                        TwoLineIconListItem:
                            text: "Educateurs (4-5-6e années)"
                            secondary_text: "04/238-39-27"
                            IconLeftWidget:
                                icon: "phone"
            Screen:
                name: "bugreport"
                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    MDList:
                        TwoLineIconListItem:
                            text: "Messenger"
                            secondary_text: "@wylarel"
                            IconLeftWidget:
                                icon: "facebook-messenger"
                        TwoLineIconListItem:
                            text: "Instagram"
                            secondary_text: "@wylarel"
                            IconLeftWidget:
                                icon: "instagram"
                        TwoLineIconListItem:
                            text: "Email"
                            secondary_text: "contact@wylarel.com"
                            IconLeftWidget:
                                icon: "email"
        MDNavigationDrawer:
            id: nav_drawer
            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer