<NameDialog>
    orientation: "vertical"
    spacing: "12dp"
    size_hint: .8, None
    height: "120dp"
    MDTextField:
        id: first_name_input
        hint_text: "Prénom"
    MDTextField:
        id: family_name_input
        hint_text: "Nom de famille"

<ClassDialog>
    orientation: "vertical"
    spacing: "12dp"
    size_hint: .8, None
    height: "50dp"
    MDTextField:
        id: class_input
        hint_text: "Classe"
        max_text_length: 4

<InfoScreen>
    name: "info"
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        MDList:
            OneLineListItem:
                text: "Informations Personnelles"
            ThreeLineIconListItem:
                id: name
                text: "Nom"
                secondary_text: "Cliquez pour définir"
                tertiary_text: "Cliquez pour définir"
                on_release:
                    root.open_name_popup()
                IconLeftWidget:
                    icon: "face"
            TwoLineIconListItem:
                id: birthday
                text: "Date de naissance"
                secondary_text: "Cliquez pour définir"
                on_release:
                    root.show_birthday_date_picker()
                IconLeftWidget:
                    icon: "cake"
            TwoLineIconListItem:
                id: class
                text: "Classe"
                secondary_text: "Cliquez pour définir"
                on_release:
                    root.open_class_popup()
                IconLeftWidget:
                    icon: "account-group"
            OneLineListItem:
                text: "Informations Générales"
